{
  "name": "dex-arbitrage",
  "version": "0.0.1",
  "description": "Another flash-loan arbitrage bot",
  "type": "module",
  "directories": {
    "test": "tests",
    "src": "src",
    "dist": "dist"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --trace-warnings dist/src/start.js",
    "clear": "rm -rf dist",
    "test:unit": "vitest run tests/unit",
    "coverage:unit": "vitest run tests/unit --coverage",
    "test:integration": "vitest run tests/integration",
    "coverage:integration": "vitest run tests/integration --coverage",
    "test:ui": "vitest --ui",
    "createAccount": "ts-node scripts/createAccount.ts",
    "runNode": "npx hardhat node",
    "compile": "npx hardhat compile"
  },
  "author": "Jorge Haddad",
  "license": "MIT",
  "devDependencies": {
    "@aave/core-v3": "1.19.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@openzeppelin/contracts": "5.1.0",
    "@types/node": "^20.17.6",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "hardhat": "^2.22.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@urql/core": "^5.0.8",
    "alchemy-sdk": "^3.5.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "graphql": "^16.9.0",
    "ws": "^8.18.0"
  }
}
